{% extends 'base/main.html.twig' %}


{% block page_title %}
    <section class="content-header">
        <h1>
            Associar Equipamento
            <small>Novo</small>
        </h1>
    </section>
{% endblock %}


{% block first_row %}

    <div class="row">

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_equipamentoaddequipamento_index',{ 'equipamento': equipamento.id }) }}" class="btn btn-{{ button_color }}" title="Lista de Equipamento">
                <span class="ti ti-arrow-left"></span>
            </a>

        </div>

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_equipamento_show',{ 'id': equipamento.id }) }}" class="btn btn-{{ button_color }}" title="Mostrar Equipamento">
                <span class="ti ti-arrow-up"></span>
            </a>

        </div>

    </div>

{% endblock %}


{% block card_body %}

    <div class="row">
        <div class="col-md-12">
            <h4>Equipamento: {{ equipamento.nome }} | {{ equipamento.centroMovimentacao }}</h4>  
        </div>
    </div>

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <div class="form-label"></div>
    <button type="submit" class="btn btn-{{ button_color }}">
        <span class="ti ti-device-floppy"></span>
    </button>
    {{ form_end(form) }}

{% endblock %}