{% extends 'base/main.html.twig' %}


{% block page_title %}

    <section class="content-header">
        <h1>
            Equipamento
            <small>Editar</small>
        </h1>
    </section>

{% endblock %}


{% block first_row %}

    <div class="row">

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_equipamento_index') }}" class="btn btn-{{ button_color }}">
                <i class="ti ti-arrow-left"></i>
            </a>

        </div>
        <div class="col-md-2 col-sm-3 col-xs-3">
            {{ form_start(delete_form) }}
            <button type="submit" class="btn btn-danger" id="remover-form">
                <i class="ti ti-trash"></i>
            </button>
            {{ form_end(delete_form) }}

        </div>
    </div>{% endblock %}

    {% block card_body %}

        {{ form_start(edit_form, { 'attr' : {'novalidate' : 'novalidate'}}) }}
        {{ form_widget(edit_form) }}

        <label class="form-label"></label>
        <button type="submit" class="btn btn-{{ button_color }}">
            <span class="ti ti-device-floppy"></span>
        </button>
        {{ form_end(edit_form) }}

    {% endblock %}
