        <h1>
            Equipamento
            <small>Novo</small>
        </h1>
    </section>

{% endblock %}


{% block first_row %}

    <div class="row">

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_equipamento_index') }}" class="btn btn-{{ button_color }}">
                <i class="ti ti-arrow-left"></i>
            </a>

        </div>
    </div>
{% endblock %}


