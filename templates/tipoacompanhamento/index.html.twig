{% extends 'base/index.html.twig' %}


{% block page_title %}


        <section class="content-header">
            <h1>
                Tipo de acompanhamento
                <small>Listar</small>
            </h1>
        </section>


    {% endblock %}


{% block first_row %}
    <div class="row">
        <div class="col-md-2">
        <a href="{{ path('cadastro_tipoacompanhamento_new') }}" class="btn btn-{{ button_color }}">
            <span class="ti ti-plus"></span>
        </a>
        </div>
    </div>
{% endblock %}

{% block table %}
        <div class="table-responsive">
        <table class="table table-bordered table-condensed table-hover table-striped table-datatable">
                <thead>
                <tr>
                    <th>Ações</th>
                    <th>Nome</th>
                </tr>
                </thead>
                <tbody>
                {% for tipoacompanhamento in tipoacompanhamentos %}
                    <tr>
                        <td>
                            <a href="{{ path('cadastro_tipoacompanhamento_show', { 'id': tipoacompanhamento.id }) }}" class="btn btn-{{ button_color }}">
                                <span class="ti ti-search"></span>
                            </a>
                            <a href="{{ path('cadastro_tipoacompanhamento_edit', { 'id': tipoacompanhamento.id }) }}" class="btn btn-{{ button_color }}">
                                <span class="ti ti-edit"></span>
                            </a>
                        </td>
                        <td><a href="{{ path('cadastro_tipoacompanhamento_show', { 'id': tipoacompanhamento.id }) }}">{{ tipoacompanhamento.nome }}</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


    {% endblock %}
