{% extends 'base/index.html.twig' %}


{% block page_title %}

    <section class="content-header">
        <h1>
            Software do equipamento
            <small>Listar</small>
        </h1>
    </section>

{% endblock %}


{% block first_row %}

    <div class="row">

        <div class="col-md-2">
            <a href="{{ path('cadastro_equipamentoaddsoftware_new',{ 'equipamento': equipamento.id }) }}" class="btn btn-{{ button_color }}" title="Adicionar Software">
                <span class="ti ti-plus"></span>
            </a>
        </div>

        <div class="col-md-2">
            <a href="{{ path('cadastro_equipamento_show',{ 'id': equipamento.id }) }}" class="btn btn-{{ button_color }}" title="Mostrar Equipamento">
                <span class="ti ti-arrow-up"></span>
            </a>
        </div>

    </div>

{% endblock %}

{% block table %}

    <div class="row">
        <div class="col-md-12">
            <h4>Equipamento: {{ equipamento.nome }} | {{ equipamento.centroMovimentacao }}</h4>  
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-hover table-striped table-datatable">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>Tipo de Software</th>
                    <th>Software</th>
                </tr>
            </thead>
            <tbody>
                {% for equipamentoHasSoftware in equipamentoHasSoftwares %}
                    <tr>
                        <td>
                            <a href="{{ path('cadastro_equipamentoaddsoftware_edit', { 'id': equipamentoHasSoftware.id }) }}" class="btn btn-{{ button_color }}">
                                <span class="ti ti-edit"></span>
                            </a>
                        </td>
                        <td>{{ equipamentoHasSoftware.software.tiposoftware.descricao }}</td>
                        <td>{{ equipamentoHasSoftware.software.descricao }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}