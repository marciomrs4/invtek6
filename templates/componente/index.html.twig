{% extends 'base/index.html.twig' %}


{% block page_title %}

    <section class="content-header">
        <h1>
            Componente
            <small>Listar</small>
        </h1>
    </section>

{% endblock %}


{% block first_row %}
    <div class="row">
        <div class="col-md-2">
            <a href="{{ path('cadastro_componente_new') }}" class="btn btn-{{ button_color }}">
                <span class="ti ti-plus"></span>
            </a>    
        </div>
    </div>
{% endblock %}

{% block table %}
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-hover table-striped table-datatable">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>Descrição</th>
                    <th>Tipo de componente</th>
                </tr>
            </thead>
            <tbody>
                {% for componente in componentes %}
                    <tr>
                        <td>
                            <a href="{{ path('cadastro_componente_show', { 'id': componente.id }) }}" class="btn btn-{{ button_color }}">
                                <span class="ti ti-search"></span>
                            </a>
                            <a href="{{ path('cadastro_componente_edit', { 'id': componente.id }) }}" class="btn btn-{{ button_color }}">
                                <span class="ti ti-edit"></span>
                            </a>
                        </td>
                        <td>{{ componente.descricao }}</td>
                        <td>{{ componente.tipocomponente.descricao }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}