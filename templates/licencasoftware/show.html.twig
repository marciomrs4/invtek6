{% extends 'base/main.html.twig' %}



{% block page_title %}

        <section class="content-header">
            <h1>
                Licença Software
                <small>Mostrar</small>
            </h1>
        </section>

    {% endblock %}


{% block first_row %}

        <div class="row">

            <div class="col-md-2 col-sm-3 col-xs-3">

                <a href="{{ path('cadastro_licencasoftware_index',{ 'software': software.id }) }}" class="btn btn-{{ button_color }}">
                    <span class="ti ti-arrow-left"></span>
                </a>

            </div>
            <div class="col-md-2 col-sm-3 col-xs-3">

                <a href="{{ path('cadastro_licencasoftware_edit', { 'id': licencaSoftware.id }) }}" class="btn btn-{{ button_color }}">
                    <span class="ti ti-edit"></span>
                </a>

            </div>

        </div>
    {% endblock %}



{% block card_body %}
    
    <div class="row">

        {% for message in app.session.flashBag.get('notice') %}
            <div class="alert alert-success alert-dismissible" role="alert">
                <div class="d-flex">
                    <div>
                        <i class="ti ti-alert-icon"></i>
                    </div>
                    <div>
                        {{ message }}.
                    </div>
                </div>
                <a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
            </div>
        {% endfor %}

    </div>

    
        <div class="table table-responsive">
            <table class="table table-bordered table-condensed">
                <tbody>
                <tr>
                    <th>Nota fiscal</th>
                    <td>{{ licencaSoftware.notafiscal }}</td>
                </tr>
                <tr>
                    <th>Data emissão</th>
                    <td>{% if licencaSoftware.dataemissao %}{{ licencaSoftware.dataemissao|date('d-m-Y') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Valor unitário</th>
                    <td>R$ {{ licencaSoftware.valorunitario | number_format(2,',','.') }}</td>
                </tr>
                <tr>
                    <th>Quantidade total</th>
                    <td>{{ licencaSoftware.quantidadetotal }}</td>
                </tr>
                <tr>
                    <th>Anotações</th>
                    <td>{{ licencaSoftware.anotacoes }}</td>
                </tr>

                <tr>
                    <th>Valor Total</th>
                   <td>R$ {{ (licencaSoftware.quantidadetotal * licencaSoftware.valorunitario) | number_format(2,',','.') }}</td>
                </tr>

                </tbody>
            </table>
        </div>


    {% endblock %}
