{% extends 'base/main.html.twig' %}


{% block page_title %}

    <section class="content-header">
        <h1>
            SoftwareTag
            <small>Mostrar</small>
        </h1>
    </section>

    {% endblock %}

{% block first_row %}

        <div class="row">

    <div class="col-md-2 col-sm-3 col-xs-3">

        <a href="{{ path('cadastro_softwaretag_index') }}" class="btn btn-primary btn-sm">
            <span class="fa fa-reply"></span>
            Voltar
        </a>

    </div>
        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_softwaretag_edit', { 'id': softwareTag.id }) }}" class="btn btn-primary btn-sm">
                <span class="glyphicon glyphicon-edit"></span>
                Editar
            </a>

        </div>
        <div class="col-md-2 col-sm-3 col-xs-3">
            {{ form_start(delete_form) }}
            <button type="submit" class="btn btn-danger btn-sm remover-form">
                <span class="glyphicon glyphicon-trash"></span>
                Deletar
            </button>
            {{ form_end(delete_form) }}

        </div>
</div>{% endblock %}



{% block card_body %}

    <div class="table table-responsive">
        <table class="table table-bordered table-condensed">
            <tbody>
                <tr>
                    <th>Descricao</th>
                        <td>{{ softwareTag.descricao }}</td>
                </tr>
                <tr>
                    <th>Nome</th>
                        <td>{{ softwareTag.nome }}</td>
                </tr>
                <tr>
                    <th>Id</th>
                        <td>{{ softwareTag.id }}</td>
                </tr>
            </tbody>
        </table>
    </div>


    {% endblock %}
