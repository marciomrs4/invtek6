{% extends 'base/index.html.twig' %}


{% block page_title %}

    <section class="content-header">
        <h1>
            SoftwareTag
            <small>Listar</small>
        </h1>
    </section>

{% endblock %}


{% block first_row %}
    <div class="row">
        <div class="col-md-2">
            <a href="{{ path('cadastro_softwaretag_new',{ 'software': software.id }) }}" class="btn btn-{{ button_color }}">
                <span class="ti ti-plus"></span>
            </a>
        </div>
        <div class="col-md-2">        
            <a href="{{ path('cadastro_software_show',{ 'id': software.id }) }}" class="btn btn-{{ button_color }}" title="Voltar para Software">
                <span class="ti ti-arrow-up"></span>
            </a>
        </div>
    </div>
{% endblock %}

{% block table %}
    <div class="row">
        <h3>Software: {{ software.descricao }}</h3>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-hover table-striped table-datatable">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>Descricao</th>
                    <th>Nome</th>
                </tr>
            </thead>
            <tbody>
                {% for softwareTag in softwareTags %}
                    <tr>
                        <td>
                            <a href="{{ path('cadastro_softwaretag_edit', { 'id': softwareTag.id }) }}" class="btn btn-{{ button_color }}">
                                <span class="ti ti-edit"></span>
                            </a>
                        </td>
                        <td>{{ softwareTag.descricao }}</td>
                        <td>{{ softwareTag.nome }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
