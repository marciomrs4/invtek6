{% extends 'base/main.html.twig' %}


{% block page_title %}

    <section class="content-header">
        <h1>
            Anexo Acompanhamento
            <small>Novo</small>
        </h1>
    </section>

{% endblock %}

{% block first_row %}

    <div class="row">

        <div class="col-md-2 col-sm-3 col-xs-3">
            <a href="{{ path('cadastro_anexoacompanhamento_index',{ 'acompanhamento': anexoAcompanhamento.acompanhamento.id }) }}" class="btn btn-{{ button_color }}">
                <span class="ti ti-arrow-left"></span>
            </a>
        </div>

        <div class="col-md-2 col-sm-3 col-xs-3">
            <a href="{{ path('cadastro_acompanhamento_show',{ 'id': anexoAcompanhamento.acompanhamento.id }) }}" class="btn btn-{{ button_color }}" title="Mostrar Acompanhamento">
                <span class="ti ti-arrow-up"></span>
            </a>
        </div>

    </div>
{% endblock %}


{% block card_body %}

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <div class="form-label"></div>
    <button type="submit" class="btn btn-{{ button_color }}">
        <span class="ti ti-device-floppy"></span>
    </button>
    {{ form_end(form) }}

{% endblock %}
