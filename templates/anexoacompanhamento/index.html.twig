{% extends 'base/index.html.twig' %}


{% block page_title %}

    <section class="content-header">
        <h1>
            Anexo Acompanhamento
            <small>Listar</small>
        </h1>
    </section>

{% endblock %}


{% block first_row %}

    <div class="row">

        <div class="col-md-2">
            <a href="{{ path('cadastro_anexoacompanhamento_new',{ 'acompanhamento': acompanhamento.id }) }}" class="btn btn-{{ button_color }}">
                <span class="ti ti-plus"></span>
            </a>
        </div>

        <div class="col-md-2">
            <a href="{{ path('cadastro_acompanhamento_show',{ 'id': acompanhamento.id }) }}" class="btn btn-{{ button_color }}" title="Mostrar Acompanhamento">
                <span class="ti ti-arrow-up"></span>
            </a>
        </div>
                
    </div>

{% endblock %}

{% block table %}

    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-hover table-striped table-datatable">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>Data de Criação</th>
                    <th>Data de alteração</th>
                    <th>Nome do Arquivo</th>
                </tr>
            </thead>
            <tbody>
                {% for anexoAcompanhamento in anexoAcompanhamentos %}
                    <tr>
                        <td>
                            <a href="{{ path('cadastro_anexoacompanhamento_show', { 'id': anexoAcompanhamento.id }) }}" class="btn btn-{{ button_color }}">
                                <span class="ti ti-search"></span>
                            </a>
                            <a href="{{ path('cadastro_anexoacompanhamento_edit', { 'id': anexoAcompanhamento.id }) }}"
                               class="btn btn-{{ button_color }}">
                                <span class="ti ti-edit"></span>
                            </a>
                            <a href="{{ vich_uploader_asset(anexoAcompanhamento,'imageFile') }}" target="_blank" class="btn btn-{{ button_color }}">
                                <span class="ti ti-download"></span>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('cadastro_anexoacompanhamento_show', { 'id': anexoAcompanhamento.id }) }}">
                                {{ anexoAcompanhamento.dataCriacao |date('d-m-Y H:i:s') }}
                            </a>
                        </td>
                        <td>{% if anexoAcompanhamento.dataAlteracao %}{{ anexoAcompanhamento.dataAlteracao|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ anexoAcompanhamento.imageName }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}