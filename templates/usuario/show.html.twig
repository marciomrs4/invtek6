{% extends 'base/main.html.twig' %}



{% block page_title %}

    <section class="content-header">
        <h1>
            Usuario
            <small>Mostrar</small>
        </h1>
    </section>

{% endblock %}


{% block first_row %}

    <div class="row">

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_usuario_index') }}" class="btn btn-{{ button_color }}" title="Voltar">
                <i class="ti ti-arrow-left"></i>
            </a>

        </div>
        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_usuario_edit', { 'id': usuario.id }) }}" class="btn btn-{{ button_color }}" title="Editar">
                <i class="ti ti-edit"></i>
            </a>

        </div>

    </div>
{% endblock %}



{% block card_body %}

    <div class="row">

        {% for message in app.session.flashBag.get('notice') %}
            <div class="alert alert-success alert-dismissible" role="alert">
                <div class="d-flex">
                    <div>
                        <i class="ti ti-alert-icon"></i>
                    </div>
                    <div>
                        {{ message }}.
                    </div>
                </div>
                <a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
            </div>
        {% endfor %}

    </div>

    <div class="table table-responsive">
        <table class="table table-hover table-striped">
            <tbody>
                <tr>
                    <th>Nome Completo</th>
                    <td>{{ usuario.nomecompleto }}</td>
                </tr>
                <tr>
                    <th>Centro de Movimentação</th>
                    <td>{{ usuario.departamento.nome }}</td>
                </tr>
                <tr>
                    <th>Nome</th>
                    <td>{{ usuario.nome }}</td>
                </tr>

                <tr>
                    <th>
                        Número Identificação
                    </th>
                    <td>{{ usuario.numeroIdentificacao }}</td>

                </tr>
                <tr>
                    <th>
                        Acesso
                    </th>
                    <td>
                        {% if usuario.userId is not null%}
                            {{ usuario.userId.email }}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>
                        Status
                    </th>
                    <td>{% if usuario.status %}Ativo{% else %}Inativo{% endif %}</td>

                </tr>
                <tr>
                    <th>Observação</th>
                    <td>{{ usuario.observacao }}</td>
                </tr>


            </tbody>
        </table>
    </div>

{% endblock %}
