{% extends 'base/main.html.twig' %}


{% block page_title %}

    <section class="content-header">
        <h1>
            Usuario
            <small>Novo</small>
        </h1>
    </section>

{% endblock %}


{% block first_row %}

    <div class="row">

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_usuario_index') }}" class="btn btn-{{ button_color }}">
                <i class="ti ti-arrow-left"></i>
            </a>

        </div>
    </div>{% endblock %}


    {% block card_body %}

        {{ form_start(form, { 'attr' : { 'novalidate' : 'novalidate' }}) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-{{ button_color }}">
            <i class="ti ti-device-floppy"></i>
        </button>
        {{ form_end(form) }}

    {% endblock %}

    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/select2.js') }}"></script>
        <script> $("#usuario_departamento").select2();</script>
    {% endblock %}
