{% extends 'base/index.html.twig' %}


{% block page_title %}

    <section class="content-header">
        <h1>
            Equipamento Tag
            <small>Listar</small>
        </h1>
    </section>

{% endblock %}


{% block first_row %}

    <div class="row">
        <div class="col-md-2">
            <a href="{{ path('cadastro_equipamentotag_new',{ 'equipamento' : equipamento.id }) }}" class="btn btn-{{ button_color }}" title="Adcionar Tag">
                <span class="ti ti-plus"></span>
            </a>
        </div>
        <div class="col-md-2">
            <a href="{{ path('cadastro_equipamento_show',{ 'id': equipamento.id }) }}" class="btn btn-{{ button_color }}" title="Mostrar Equipamento">
                <span class="ti ti-arrow-up"></span>
            </a>
        </div>
    </div>

{% endblock %}

{% block table %}

    <div class="row">
        <div class="col-md-12">
            <h4>Equipamento: {{ equipamento.nome }} | {{ equipamento.centroMovimentacao }}</h4>  
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-hover table-striped table-datatable">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>Descricao</th>
                    <th>Nome</th>
                </tr>
            </thead>
            <tbody>
                {% for equipamentoTag in equipamentoTags %}
                    <tr>
                        <td>

                            <a href="{{ path('cadastro_equipamentotag_edit', { 'id': equipamentoTag.id }) }}" class="btn btn-{{ button_color }}" title="Editar">
                                <span class="ti ti-edit"></span>
                            </a>
                        </td>
                        <td><a href="{{ path('cadastro_equipamentotag_edit', { 'id': equipamentoTag.id }) }}">{{ equipamentoTag.descricao }}</a></td>
                        <td>{{ equipamentoTag.nome }}</td>

                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}