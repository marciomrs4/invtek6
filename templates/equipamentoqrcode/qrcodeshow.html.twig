{% extends 'base/main.html.twig' %}


{% block page_title %}

    <section class="content-header">
        <h1>
            Equipamento
            <small>QrCode</small>
        </h1>
    </section>

{% endblock %}


{% block first_row %}

    <div class="row">

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_equipamento_show',{ 'id': equipamento.id }) }}" class="btn btn-{{ button_color }}">
                <span class="ti ti-arrow-left"></span>
            </a>

        </div>
    </div>
{% endblock %}


{% block card_body %}

    <div class="row">
        <div class="col-md-2">
            <div class="card">

                <div class="card-header with-border">
                    <h3 class="card-title">
                        Patrim√¥nio: {{ equipamento.patrimonio }}
                    </h3>
                </div>

                <div class="card-body" style="display: block;">
                    <img src="{{ qr_code_data_uri(absolute_url(path('equipamento_qrcode_show',{ 'equipamento' : equipamento.id }))) }}">
                </div>

            </div>
        </div>
    </div>

{% endblock %}
