{% extends 'base/main.html.twig' %}


{% block page_title %}

    <section class="content-header">
        <h1>
            Unidade
            <small>Editar</small>
        </h1>
    </section>

{% endblock %}


{% block first_row %}

    <div class="row">

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_unidade_index') }}" class="btn btn-{{ button_color }}" title="Voltar">
                <i class="ti ti-arrow-left"></i>
            </a>

        </div>
        <div class="col-md-2 col-sm-3 col-xs-3">
            {{ form_start(delete_form) }}
            <button type="submit" class="btn btn-danger"  id="remover-form">
                <i class="ti ti-trash"></i>
            </button>
            {{ form_end(delete_form) }}

        </div>
    </div>
{% endblock %}

{% block card_body %}

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}

    
    <i class="form-label"></i>
    
    
    <button type="submit" class="btn btn-{{ button_color }} ">
        <i class="ti ti-device-floppy"></i>
    </button>

    {{ form_end(edit_form) }}

{% endblock %}

