{% extends 'base/main.html.twig' %}



    {% block page_title %}

        <section class="content-header">
            <h1>
                CentroMovimentacao
                <small>Mostrar</small>
            </h1>
        </section>

    {% endblock %}


    {% block first_row %}

        <div class="row">

            <div class="col-md-2 col-sm-3 col-xs-3">

                <a href="{{ path('cadastro_centromovimentacao_index') }}" class="btn btn-{{ button_color }}">
                    <span class="ti ti-arrow-left"></span>
                </a>

            </div>
            <div class="col-md-2 col-sm-3 col-xs-3">

                <a href="{{ path('cadastro_centromovimentacao_edit', { 'id': centroMovimentacao.id }) }}" class="btn btn-{{ button_color }}">
                    <span class="ti ti-edit"></span>
                </a>

            </div>
        </div>
    {% endblock %}



    {% block card_body %}
        
        <div class="row">

        {% for message in app.session.flashBag.get('notice') %}
            <div class="alert alert-success alert-dismissible" role="alert">
                <div class="d-flex">
                    <div>
                        <i class="ti ti-alert-icon"></i>
                    </div>
                    <div>
                        {{ message }}.
                    </div>
                </div>
                <a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
            </div>
        {% endfor %}

    </div>

        <div class="table table-responsive">
            <table class="table table-hover table-striped">
                <tbody>
                <tr>
                    <th>Nome</th>
                    <td>{{ centroMovimentacao.nome }}</td>
                </tr>
                <tr>
                    <th>Tempo de Preventiva (mês)</th>
                    <td>{{ centroMovimentacao.tempoPrevencao }} mês(es)</td>
                </tr>
                <tr>
                    <th>Unidade</th>
                    <td>{% if centroMovimentacao.unidade %}
                            {{ centroMovimentacao.unidade.nome }}
                        {% endif %}
                    </td>
                </tr>
                </tbody>
            </table>
        </div>

    {% endblock %}
