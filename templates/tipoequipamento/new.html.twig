{% extends 'base/main.html.twig' %}


{% block page_title %}

    <section class="content-header">
        <h1>
            Tipo de Equipamento
            <small>Novo</small>
        </h1>
    </section>

{% endblock %}


{% block first_row %}

    <div class="row">

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_tipoequipamento_index') }}" class="btn btn-{{ button_color }}">
                <span class="ti ti-arrow-left"></span>
            </a>

        </div>

        <div class="col-md-2 col-sm-3 col-xs-3">

            <button class="btn btn-{{ button_color }}" 
                    type="button" 
                    data-bs-toggle="collapse" 
                    data-bs-target="#collapseExample"
                    aria-expanded="false" 
                    aria-controls="collapseExample">
                <span class="ti ti-question-mark"></span>
            </button>

        </div>

    </div>
{% endblock %}


{% block card_body %}

    {{ form_start(form, { 'attr' : { 'novalidate':'novalidate' } }) }}
    {{ form_widget(form) }}


    <span class="form-label"></span>
    <button type="submit" class="btn btn-{{ button_color }}">
        <span class="ti ti-device-floppy"></span>
    </button>
    {{ form_end(form) }}


    <div class="collapse" id="collapseExample">
        <div class="card">
            <div class="card-title">
                Exemplos de Icones
            </div>
            {{ include('tipoequipamento/iconslist/icons.html.twig') }}
        </div>
    </div>

{% endblock %}