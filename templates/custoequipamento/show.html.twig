{% extends 'base/main.html.twig' %}



{% block page_title %}

    <section class="content-header">
        <h1>
            Custo Equipamento
            <small>Mostrar</small>
        </h1>
    </section>

{% endblock %}


{% block first_row %}

    <div class="row">

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_custoequipamento_index',{ 'equipamento' : custoEquipamento.equipamento.id }) }}" class="btn btn-{{ button_color }}">
                <span class="ti ti-arrow-left"></span>
            </a>

        </div>
        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_custoequipamento_edit', { 'id': custoEquipamento.id }) }}" class="btn btn-{{ button_color }}">
                <span class="ti ti-edit"></span>
            </a>

        </div>

        {% if acompanhamento %}
            <div class="col-md-2">
                <a href="{{ path('cadastro_acompanhamento_show', { 'id': acompanhamento.id }) }}" class="btn btn-{{ button_color }}" title="Mostrar Acompanhamento">
                    <span class="ti ti-arrow-up"></span>
                </a>
            </div>
        {% endif %}


        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_equipamento_show', { 'id': custoEquipamento.equipamento.id }) }}" class="btn btn-{{ button_color }}" title="Mostrar Equipamento">
                <span class="ti ti-arrow-up"></span>
            </a>

        </div>
    </div>
{% endblock %}



{% block card_body %}

    <div class="row">

        {% for message in app.session.flashBag.get('notice') %}
            <div class="alert alert-success alert-dismissible" role="alert">
                <div class="d-flex">
                    <div>
                        <i class="ti ti-alert-icon"></i>
                    </div>
                    <div>
                        {{ message }}.
                    </div>
                </div>
                <a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
            </div>
        {% endfor %}

    </div>

    <div class="row">
        <div class="col-md-12">
            <h4>Equipamento: {{ equipamento.nome }} | {{ equipamento.centroMovimentacao }}</h4>  
        </div>
    </div>


    <div class="table table-responsive">
        <table class="table table-bordered table-condensed">
            <tbody>
                <tr>
                    <th>Valor</th>
                    <td>{{ custoEquipamento.valor|number_format(2,',','.') }}</td>
                </tr>
                <tr>
                    <th>Descrição</th>
                    <td>{{ custoEquipamento.descricao }}</td>
                </tr>
                <tr>
                    <th>Data Lançamento</th>
                    <td>{{ custoEquipamento.dataCriacao | date('d-m-Y') }}</td>
                </tr>
            </tbody>
        </table>
    </div>

{% endblock %}