{% extends 'base/index.html.twig' %}


{% block page_title %}

    <section class="content-header">
        <h1>
            Status Ip
            <small>Listar</small>
        </h1>
    </section>

{% endblock %}


{% block first_row %}
    <div class="row">
        <div class="col-md-2">
            <a href="{{ path('cadastro_statusip_new') }}" class="btn btn-{{ button_color }}">
                <span class="ti ti-plus"></span>
            </a>
        </div>
    </div>
{% endblock %}

{% block table %}
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>Nome</th>
                    <th>Código</th>
                </tr>
            </thead>
            <tbody>
                {% for statusIp in statusIps %}
                    <tr>
                        <td>
                            <a href="{{ path('cadastro_statusip_show', { 'id': statusIp.id }) }}" class="btn btn-{{ button_color }}">
                                <span class="ti ti-search"></span>
                            </a>
                            <a href="{{ path('cadastro_statusip_edit', { 'id': statusIp.id }) }}" class="btn btn-{{ button_color }}">
                                <span class="ti ti-edit"></span>
                            </a>
                        </td>
                        <td><a href="{{ path('cadastro_statusip_show', { 'id': statusIp.id }) }}">{{ statusIp.nome }}</a></td>
                        <td>{{ statusIp.id }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}