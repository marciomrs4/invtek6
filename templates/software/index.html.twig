{% extends 'base/index.html.twig' %}


{% block page_title %}


    <section class="content-header">
        <h1>
            Software
            <small>Listar</small>
        </h1>
    </section>


{% endblock %}


{% block first_row %}

    <div class="row">
        <div class="col-md-2">
            <a href="{{ path('cadastro_software_new') }}" class="btn btn-{{ button_color }}">
                <span class="ti ti-plus"></span>
            </a>
        </div>
    </div>

{% endblock %}

{% block table %}
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-hover table-striped table-datatable">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>Descricao</th>
                    <th>Versao</th>
                    <th>Serial</th>
                    <th>Tipo de Software</th>
                    <th>Fornecedor de Software</th>
                    <th>Nº de licença</th>
                    <th>Nº de Reservas</th>
                    <th>Em uso</th>
                    <th>Disponiveis</th>
                </tr>
            </thead>
            <tbody>
                {% for software in softwares %}
                    <tr>
                        <td>
                            <a href="{{ path('cadastro_software_show', { 'id': software.id }) }}" class="btn btn-{{ button_color }}">
                                <span class="ti ti-search"></span>
                            </a>
                            <a href="{{ path('cadastro_software_edit', { 'id': software.id }) }}" class="btn btn-{{ button_color }}">
                                <span class="ti ti-edit"></span>
                            </a>
                        </td>
                        <td>{{ software.descricao }}</td>
                        <td>{{ software.versao }}</td>
                        <td>{{ software.serial }}</td>
                        <td>{{ software.tiposoftware }}</td>
                        <td>{{ software.fornecedor }}</td>
                        <td>{{ software.numerolicensa }}</td>
                        <td>{{ software.numeroReserva }}</td>
                        <td>{{ software.quantidadeEquipamento }}</td>
                        <td {% if software.disponiveis < 0 %}
                            style="background-color: red; color: white"
                            {% endif %}
                                >
                                {{ software.disponiveis }}
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>


                {% endblock %}