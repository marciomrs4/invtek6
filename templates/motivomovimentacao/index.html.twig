{% extends 'base/index.html.twig' %}


{% block page_title %}


    <section class="content-header">
        <h1>
            Motivo de Movimentação
            <small>Listar</small>
        </h1>
    </section>


{% endblock %}


{% block first_row %}
    <div class="row">
        <div class="col-md-2">
            <a href="{{ path('cadastro_motivomovimentacao_new') }}" class="btn btn-{{ button_color }}">
                <span class="ti ti-plus"></span>
            </a>
        </div>
    </div>
{% endblock %}

{% block table %}
    
        <div class="row">

        {% for message in app.session.flashBag.get('notice') %}
            <div class="alert alert-success alert-dismissible" role="alert">
                <div class="d-flex">
                    <div>
                        <i class="ti ti-alert-icon"></i>
                    </div>
                    <div>
                        {{ message }}.
                    </div>
                </div>
                <a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
            </div>
        {% endfor %}

    </div>

    
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-hover table-striped table-datatable">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>Descricao</th>
                    <th>Tipo de Movimentação</th>
                </tr>
            </thead>
            <tbody>
                {% for motivomovimentacao in motivomovimentacaos %}
                    <tr>
                        <td>
                            <a href="{{ path('cadastro_motivomovimentacao_show', { 'id': motivomovimentacao.id }) }}" class="btn btn-{{ button_color }}">
                                <span class="ti ti-search"></span>
                            </a>
                            <a href="{{ path('cadastro_motivomovimentacao_edit', { 'id': motivomovimentacao.id }) }}" class="btn btn-{{ button_color }}">
                                <span class="ti ti-edit"></span>
                            </a>
                        </td>
                        <td><a href="{{ path('cadastro_motivomovimentacao_show', { 'id': motivomovimentacao.id }) }}">{{ motivomovimentacao.descricao }}</a></td>
                        <td>{{ motivomovimentacao.tipomovimentacao.nome }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}
