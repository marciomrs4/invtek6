{% extends 'base/main.html.twig' %}

{% block page_title %}

    <section class="content-header">
        <h1>
            Motivo de Movimentação
            <small>Mostrar</small>
        </h1>
    </section>

{% endblock %}


{% block first_row %}

    <div class="row">

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_motivomovimentacao_index') }}" class="btn btn-{{ button_color }}">
                <span class="ti ti-arrow-left"></span>
            </a>

        </div>
        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_motivomovimentacao_edit', { 'id': motivomovimentacao.id }) }}" class="btn btn-{{ button_color }}">
                <span class="ti ti-edit"></span>
            </a>

        </div>
        <div class="col-md-2 col-sm-3 col-xs-3">
            {{ form_start(delete_form) }}
            <button type="submit" class="btn btn-danger" id="remover-form">
                <span class="ti ti-trash"></span>
            </button>
            {{ form_end(delete_form) }}

        </div>
    </div>{% endblock %}



    {% block card_body %}

        <div class="row">

            {% for message in app.session.flashBag.get('notice') %}
                <div class="alert alert-success alert-dismissible" role="alert">
                    <div class="d-flex">
                        <div>
                            <i class="ti ti-alert-icon"></i>
                        </div>
                        <div>
                            {{ message }}.
                        </div>
                    </div>
                    <a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
                </div>
            {% endfor %}

        </div>


        <div class="table table-responsive">
            <table class="table table-bordered table-condensed table-hover table-striped table-datatable">
                <tbody>
                    <tr>
                        <th>Descricao</th>
                        <td>{{ motivomovimentacao.descricao }}</td>
                    </tr>
                    <tr>
                        <th>Tipo de Movimentação</th>
                        <td>{{ motivomovimentacao.tipomovimentacao.nome }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

    {% endblock %}
