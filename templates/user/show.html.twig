{% extends 'base/main.html.twig' %}



{% block page_title %}

    <section class="content-header">
        <h1>
            Acessos (User)
            <small>Mostrar</small>
        </h1>
    </section>

{% endblock %}

{% block first_row %}

    <div class="row">

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('app_user_index') }}" class="btn btn-{{ button_color }}">
                <span class="ti ti-arrow-left"></span>
            </a>

        </div>
        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-{{ button_color }}">
                <span class="ti ti-edit"></span>
            </a>

        </div>

    </div>

{% endblock %}



{% block card_body %}

    <div class="table table-responsive">
        <table class="table table-bordered table-condensed">
            <tbody>
                <tr>
                    <th>Nome</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
            </tbody>
        </table>
    </div>


{% endblock %}