{% extends 'base/index.html.twig' %}


{% block page_title %}

    <section class="content-header">
        <h1>
            Fornecedor de Software
            <small>Listar</small>
        </h1>
    </section>

{% endblock %}


{% block first_row %}
    <div class="row">
        <div class="col-md-2">
            <a href="{{ path('cadastro_fornecedorsoftware_new') }}" class="btn btn-{{ button_color }}">
                <span class="ti ti-plus"></span>
            </a>
        </div>
    </div>
{% endblock %}

{% block table %}
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-hover table-striped table-datatable">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>Nome</th>
                    <th>Descricao</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {% for fornecedorSoftware in fornecedorSoftwares %}
                    <tr>
                        <td>
                            <a href="{{ path('cadastro_fornecedorsoftware_show', { 'id': fornecedorSoftware.id }) }}" class="btn btn-{{ button_color }}">
                                <span class="ti ti-search"></span>
                            </a>
                            <a href="{{ path('cadastro_fornecedorsoftware_edit', { 'id': fornecedorSoftware.id }) }}" class="btn btn-{{ button_color }}">
                                <span class="ti ti-edit"></span>
                            </a>
                        </td>
                        <td><a href="{{ path('cadastro_fornecedorsoftware_show', { 'id': fornecedorSoftware.id }) }}">{{ fornecedorSoftware.nome }}</a></td>
                        <td>{{ fornecedorSoftware.descricao }}</td>
                        <td>{% if fornecedorSoftware.status %}Ativo{% else %}Inativo{% endif %}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
