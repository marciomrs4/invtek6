{% extends 'base/index.html.twig' %}


{% block page_title %}


    <section class="content-header">
        <h1>
            Marca
            <small>Listar</small>
        </h1>
    </section>


{% endblock %}


{% block first_row %}
    <div class="row">
        <div class="col-md-2">
        <a href="{{ path('cadastro_marca_new') }}" class="btn btn-{{ button_color }}">
            <span class="ti ti-plus"></span>
        </a>

        {% if importacao %}
            <button type="button" class="btn btn-{{ button_color }}" data-toggle="modal"
                    data-target=".bs-example-modal-sm">
                <span class="ti ti-upload"></span>
            </button>
        {% endif  %}
        </div>
    </div>

{% endblock %}

{% block table %}
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-hover table-striped table-datatable">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>Nome</th>
                </tr>
            </thead>
            <tbody>
                {% for marca in marcas %}
                    <tr>
                        <td>
                            <a href="{{ path('cadastro_marca_show', { 'id': marca.id }) }}" class="btn btn-{{ button_color }}">
                                <span class="ti ti-search"></span>
                            </a>
                            <a href="{{ path('cadastro_marca_edit', { 'id': marca.id }) }}" class="btn btn-{{ button_color }}">
                                <span class="ti ti-edit"></span>
                            </a>
                        </td>
                        <td>{{ marca.nome }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>


    <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">

        <div class="col-md-3"></div>

        <div class="col-md-6">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span></button>
                    <h4 class="modal-title">Importar Arquivo</h4>
                </div>
                <div class="modal-body">

                    <form action="" method="post" enctype="multipart/form-data">
                        <div class="row">

                            <div class="col-md-4">
                                <input type="file" name="file_csv" required>
                            </div>

                        </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-{{ button_color }} btn-sm pull-left">
                        <span class="glyphicon glyphicon-upload"></span>
                        Importar
                    </button>
                    </form>
                    <button type="button" class="btn btn-default btn-sm pull-right" data-dismiss="modal">Fechar</button>
                </div>

                <div class="panel panel-default">

                    <div class="panel-heading">
                        Enviar somente as colunas, sem o cabeçalho, cada coluna separada por virgula (",")
                        Como um arquivo CSV.
                        Colunas necessárias: Exemplo abaixo.
                    </div>

                    <div class="panel-body">

                        <table class="table table-bordered table-condensed">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Nome</td>
                                    <td></td>
                                </tr>
                            </tbody>

                        </table>

                    </div>

                </div>


            </div>

        </div>

        <div class="col-md-3">
        </div>

    </div>

{% endblock %}
