{% extends 'base/main.html.twig' %}


{% block page_title %}

    <section class="content-header">
        <h1>
            Anexo
            <small>Mostrar</small>
        </h1>
    </section>

{% endblock %}


{% block first_row %}

    <div class="row">

        <div class="col-md-2 col-sm-3 col-xs-3">
            <a href="{{ path('cadastro_anexoequipamento_index',{ 'equipamento': anexo.equipamento.id }) }}" class="btn btn-{{ button_color }}">
                <span class="ti ti-arrow-left"></span>
            </a>
        </div>

        <div class="col-md-2 col-sm-3 col-xs-3">
            <a href="{{ path('cadastro_anexoequipamento_edit', { 'id': anexo.id }) }}" class="btn btn-{{ button_color }}">
                <span class="ti ti-edit"></span>
            </a>
        </div>

    </div>
{% endblock %}



{% block card_body %}

    <div class="row">

        {% for message in app.session.flashBag.get('notice') %}
            <div class="alert alert-success alert-dismissible" role="alert">
                <div class="d-flex">
                    <div>
                        <i class="ti ti-alert-icon"></i>
                    </div>
                    <div>
                        {{ message }}.
                    </div>
                </div>
                <a class="btn-close" data-bs-dismiss="alert" aria-label="close"></a>
            </div>
        {% endfor %}

    </div>


    <div class="row">
        <div class="col-md-12">
            <h4>Equipamento: {{ equipamento.nome }} | {{ equipamento.centroMovimentacao }}</h4>  
        </div>
    </div>


    <div class="table table-responsive">
        <table class="table table-bordered table-condensed table-hover table-striped table-datatable">
            <tbody>
                <tr>
                    <th>Arquivo</th>
                    <td>{{ anexo.imageName }}</td>
                </tr>
                <tr>
                    <th>Nome</th>
                    <td>{{ anexo.nome }}</td>
                </tr>
                <tr>
                    <th>Data de criação</th>
                    <td>{% if anexo.datacriacao %}{{ anexo.datacriacao|date('d-m-Y H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Data de Alteração</th>
                    <td>{% if anexo.dataalteracao %}{{ anexo.dataalteracao|date('d-m-Y H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Baixar</th>
                    <td>
                        <a href="{{ vich_uploader_asset(anexo,'imageFile') }}" target="_blank" class="btn btn-{{ button_color }}">
                            <span class="ti ti-download"></span>
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

{% endblock %}