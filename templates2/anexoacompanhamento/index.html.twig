{% extends 'template/template.html.twig' %}


    {% block contentheader %}


        <section class="content-header">
            <h1>
                Anexo Acompanhamento
                <small>Listar</small>
            </h1>
        </section>


    {% endblock %}


    {% block panelheading %}
        <a href="{{ path('cadastro_anexoacompanhamento_new',{ 'acompanhamento': acompanhamento.id }) }}" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-plus"></span>
            Novo
        </a>

        <a href="{{ path('cadastro_acompanhamento_show',{ 'id': acompanhamento.id }) }}" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-eye-open"></span>
            Acompanhamento
        </a>

    {% endblock %}

    {% block panelbody %}
        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-hover table-striped">
                <thead>
                <tr>
                    <th>Ações</th>
                    <th>Data de Criação</th>
                    <th>Data de alteração</th>
                    <th>Nome do Arquivo</th>
                </tr>
                </thead>
                <tbody>
                {% for anexoAcompanhamento in anexoAcompanhamentos %}
                    <tr>
                        <td>
                            <a href="{{ path('cadastro_anexoacompanhamento_show', { 'id': anexoAcompanhamento.id }) }}" class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-eye-open"></span>
                                Mostrar
                            </a>
                            <a href="{{ path('cadastro_anexoacompanhamento_edit', { 'id': anexoAcompanhamento.id }) }}"
                               class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-edit"></span>
                                Editar
                            </a>
                            <a href="{{ vich_uploader_asset(anexoAcompanhamento,'imageFile') }}" target="_blank" class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-download"></span>
                                Baixar
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('cadastro_anexoacompanhamento_show', { 'id': anexoAcompanhamento.id }) }}">
                                {{ anexoAcompanhamento.dataCriacao |date('d-m-Y H:i:s') }}
                            </a>
                        </td>
                        <td>{% if anexoAcompanhamento.dataAlteracao %}{{ anexoAcompanhamento.dataAlteracao|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ anexoAcompanhamento.imageName }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


    {% endblock %}
