{% extends 'template/template.html.twig' %}


    {% block contentheader %}


        <section class="content-header">
            <h1>
                SoftwareTag
                <small>Listar</small>
            </h1>
        </section>


    {% endblock %}

    {% block firstrow %}

        {% for message in app.session.flashBag.get('notice') %}
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <i class="fa fa-info"></i> {{ message }}. <i class="fa fa-smile-o"></i>
                </div>
            </div>
        {% endfor %}


    {% endblock %}



    {% block panelheading %}
        <a href="{{ path('cadastro_softwaretag_new',{ 'software': software.id }) }}" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-plus"></span>
            Novo Tag
        </a>
        <a href="{{ path('cadastro_software_show',{ 'id': software.id }) }}" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-eye-open"></span>
            Mostrar Software
        </a>
    {% endblock %}

    {% block panelbody %}
        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-hover table-striped">
                <thead>
                <tr>
                    <th>Ações</th>
                    <th>Descricao</th>
                    <th>Nome</th>
                </tr>
                </thead>
                <tbody>
                {% for softwareTag in softwareTags %}
                    <tr>
                        <td>
                            <a href="{{ path('cadastro_softwaretag_edit', { 'id': softwareTag.id }) }}" class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-edit"></span>
                                Editar
                            </a>
                        </td>
                        <td>{{ softwareTag.descricao }}</td>
                        <td>{{ softwareTag.nome }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


    {% endblock %}
