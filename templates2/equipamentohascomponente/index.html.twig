{% extends 'template/template.html.twig' %}


    {% block contentheader %}


        <section class="content-header">
            <h1>
                Equipamento por Componente
                <small>Listar</small>
            </h1>
        </section>

        {% for message in app.session.flashBag.get('notice') %}
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <i class="fa fa-info"></i> {{ message }}. <i class="fa fa-smile-o"></i>
                </div>
            </div>
        {% endfor %}


    {% endblock %}


    {% block panelheading %}

        <div class="row">

            <div class="col-md-2 col-sm-3 col-xs-3">
                <a href="{{ path('cadastro_equipamentocomponente_new',{ 'equipamento' : equipamento.id }) }}" class="btn btn-primary btn-sm">
                    <span class="glyphicon glyphicon-plus"></span>
                    Adicionar Componente
                </a>
            </div>

            <div class="col-md-2 col-sm-3 col-xs-3">
                <a href="{{ path('cadastro_equipamento_show',{ 'id': equipamento.id }) }}" class="btn btn-primary btn-sm">
                    <span class="glyphicon glyphicon-eye-open"></span>
                    Mostrar Equipamento
                </a>
            </div>

        </div>

    {% endblock %}

    {% block panelbody %}
        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-hover table-striped">
                <thead>
                <tr>
                    <th>Ações</th>
                    <th>Tipo de Componente</th>
                    <th>Componente</th>
                </tr>
                </thead>
                <tbody>
                {% for equipamentoHasComponente in equipamentoHasComponentes %}
                    <tr>
                        <td>

                            <a href="{{ path('cadastro_equipamentocomponente_edit', { 'id': equipamentoHasComponente.id }) }}" class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-edit"></span>
                                Editar
                            </a>
                        <td>{{ equipamentoHasComponente.componente.tipocomponente.descricao }}</td>
                        <td>{{ equipamentoHasComponente.componente.descricao }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


    {% endblock %}
