{% extends 'template/template.html.twig' %}


    {% block contentheader %}


    <section class="content-header">
        <h1>
            Motivo de Movimentação
            <small>Listar</small>
        </h1>
    </section>


    {% endblock %}


    {% block panelheading %}
    <a href="{{ path('cadastro_motivomovimentacao_new') }}" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-plus"></span>
            Novo
        </a>
    {% endblock %}

    {% block panelbody %}
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
            <tr>
                <th>Ações</th>
                    <th>Descricao</th>
                    <th>Tipo de Movimentação</th>
            </tr>
            </thead>
            <tbody>
            {% for motivomovimentacao in motivomovimentacaos %}
            <tr>
                <td>
                    <a href="{{ path('cadastro_motivomovimentacao_show', { 'id': motivomovimentacao.id }) }}" class="btn btn-primary btn-sm">
                        <span class="glyphicon glyphicon-eye-open"></span>
                        Mostrar
                    </a>
                    <a href="{{ path('cadastro_motivomovimentacao_edit', { 'id': motivomovimentacao.id }) }}" class="btn btn-primary btn-sm">
                        <span class="glyphicon glyphicon-edit"></span>
                        Editar
                    </a>
                </td>
                <td><a href="{{ path('cadastro_motivomovimentacao_show', { 'id': motivomovimentacao.id }) }}">{{ motivomovimentacao.descricao }}</a></td>
                <td>{{ motivomovimentacao.tipomovimentacao.nome }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


    {% endblock %}
