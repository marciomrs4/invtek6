{% extends 'template/template.html.twig' %}


    {% block contentheader %}

        <section class="content-header">
            <h1>
                Unidade
                <small>Listar</small>
            </h1>
        </section>

    {% endblock %}


    {% block panelheading %}
        <a href="{{ path('cadastro_unidade_new') }}" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-plus"></span>
            Novo
        </a>
    {% endblock %}

    {% block panelbody %}
        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-hover table-striped">
                <thead>
                <tr>
                    <th>Ações</th>
                    <th>Nome</th>
                </tr>
                </thead>
                <tbody>
                {% for unidade in unidades %}
                    <tr>
                        <td>
                            <a href="{{ path('cadastro_unidade_show', { 'id': unidade.id }) }}" class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-eye-open"></span>
                                Mostrar
                            </a>
                            <a href="{{ path('cadastro_unidade_edit', { 'id': unidade.id }) }}" class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-edit"></span>
                                Editar
                            </a>
                        </td>
                        <td>{{ unidade.nome }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


    {% endblock %}
